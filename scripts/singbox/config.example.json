{
  "log": { "level": "info" },
  "inbounds": [
    {
      "type": "direct",
      "tag": "reality-guard",
      "listen": "::",
      "listen_port": 31735,
      "network": "tcp",
      "override_address": "127.0.0.1",
      "override_port": 31736
    },
    {
      "type": "vless",
      "tag": "reality-in",
      "listen": "127.0.0.1",
      "listen_port": 31736,
      "users": [{ "uuid": "⭕️YOUR UUID HERE", "flow": "xtls-rprx-vision" }],
      "tls": {
        "enabled": true,
        "server_name": "music.apple.com",
        "alpn": ["h2", "http/1.1"],
        "reality": {
          "enabled": true,
          "handshake": { "server": "music.apple.com", "server_port": 443 },
          "private_key": "⭕️YOUR PRIVATE KEY HERE",
          "short_id": ["⭕️YOUR SHORT ID HERE"],
          "max_time_difference": "1m"
        }
      }
    }
  ],
  "outbounds": [
    { "type": "direct", "tag": "direct" }
  ],
  "route": {
    "rules": [
      { "inbound": ["reality-guard"], "action": "sniff", "sniffer": ["tls"], "timeout": "300ms" },
      { "inbound": ["reality-guard"], "action": "route", "domain": ["music.apple.com"], "outbound": "direct" },
      { "inbound": ["reality-guard"], "action": "reject", "method": "drop" }
    ],
    "final": "direct"
  }
}
